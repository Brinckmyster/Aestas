body {
  font-family: 'Segoe UI', 'Arial', sans-serif;
  background: #f6f9fc;
  margin: 0;
  color: #1a2233;
}

.main-card {
  max-width: 830px;
  margin: 2.7rem auto 2rem auto;
  background: #fff;
  border-radius: 22px;
  box-shadow: 0 2px 16px #0002;
  padding: 2.5rem 2rem 2.2rem 2rem;
}
.big-tabs {
  display: flex;
  gap: 20px;
  margin: 0 0 2.4em 0;
  padding: 0;
  flex-wrap: wrap;
}
.big-tabs a {
  background: #397cf6;
  color: #fff;
  padding: 0.77em 1.6em;
  border-radius: 100px;
  text-decoration: none;
  font-weight: 600;
  font-size: 1.07rem;
  box-shadow: 0 1px 5px #0001;
  margin-bottom: 10px;
  letter-spacing: 0.01em;
  transition: background 0.16s;
}
.big-tabs a:hover {
  background: #195ebd;
}
.section-head {
  font-size: 1.38em;
  margin: 2em 0 1em 0;
  color: #397cf6;
  letter-spacing: 0.01em;
  font-weight: bold;
}
.card-box {
  background: #eef3fa;
  border-radius: 14px;
  margin: 1.35em 0 1.85em 0;
  padding: 1.15em 1.3em;
  box-shadow: 0 1px 6px #0001;
}
.card-box ul {
  margin: 0.22em 0 0 0;
  padding-left: 1.12em;
}
.emoji-btn {
  font-size: 1.18em;
  margin-right: 0.7em;
  vertical-align: -3px;
}
footer {
  padding: 2em 0 0 0;
  color: #88a !important;
  font-size: 0.96rem;
  text-align: center;
}
a,
a:visited {
  color: #397cf6;
}
@media (max-width: 600px) {
  .main-card { padding: 1em 0.4em 1.2em 0.3em; }
  .big-tabs a { font-size: 1em; padding: 0.7em 1.12em; }
  .section-head { font-size: 1.15em; }
  .card-box { padding: 0.92em 0.5em; }
}
