    body { margin: 0; font-family: sans-serif; background: #fff; padding: 2rem; }
    header { text-align: center; margin-bottom: 2rem; }
    h1 { color: #1f2937; margin-bottom: 0.5rem; }
    .subtitle { color: #4b5563; margin-bottom: 2rem; }
    .icon-grid { display: grid; grid-template-columns: repeat(auto-fill, minmax(200px, 1fr)); gap: 1.5rem; max-width: 1200px; margin: 0 auto 3rem; }
    .icon-item { display: flex; flex-direction: column; align-items: center; padding: 1rem; border: 1px solid #e5e7eb; border-radius: 0.5rem; background: #f9fafb; transition: transform 0.2s, box-shadow 0.2s; }
    .icon-item:hover { transform: translateY(-2px); box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1); }
    .icon-item img { max-width: 100px; max-height: 100px; object-fit: contain; margin-bottom: 0.75rem; border-radius: 0.25rem; }
    .icon-filename { font-size: 0.875rem; color: #374151; text-align: center; word-break: break-word; padding: 0.5rem 0.75rem; background: #3b82f6; color: #fff; border-radius: 0.375rem; font-weight: 500; min-height: 1.25rem; display: flex; align-items: center; justify-content: center; }
    .return-home { display: block; margin: 2rem auto 0; padding: 0.75rem 1.5rem; background: #3b82f6; color: #fff; text-decoration: none; border-radius: 0.5rem; text-align: center; max-width: 200px; font-weight: 500; transition: background-color 0.2s; }
    .return-home:hover { background: #2563eb; }
    .user-tier img, .icon-item img { width: 32px !important; height: 32px !important; object-fit: contain; padding: 4px; border-radius: 4px; }
  </style>
